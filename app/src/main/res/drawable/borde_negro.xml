<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa del borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color del borde -->
        </shape>
    </item>

    <!-- Capa interna (relleno del fondo del ImageView) -->
    <item
        android:id="@+id/interna"
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Fondo interno del ImageView -->
        </shape>
    </item>
</layer-list>
