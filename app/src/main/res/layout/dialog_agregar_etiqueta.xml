<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_dialogo_opciones">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nombre_etiqueta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la etiqueta"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxStrokeColor="@color/light_gray"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeWidth="1dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_notas_numerico_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@null" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/titulo_color_etiqueta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige el color de la etiqueta"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/til_nombre_etiqueta"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/img_color_etiqueta_num"
        app:layout_constraintBottom_toBottomOf="@id/img_color_etiqueta_num"
        android:textColor="@color/lightGrayColor"
        />

    <ImageView
        android:id="@+id/img_color_etiqueta_num"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/til_nombre_etiqueta"
        app:layout_constraintStart_toEndOf="@id/titulo_color_etiqueta"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/borde_negro"
        />

    <Button
        android:id="@+id/button_cancelar_agregar_etiqueta"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Cancelar"
        app:layout_constraintTop_toBottomOf="@id/img_color_etiqueta_num"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_18"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/button_guardar_agreagr_etiqueta"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_color_etiqueta_num"
        android:textSize="@dimen/text_18"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>