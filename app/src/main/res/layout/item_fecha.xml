<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/w_item_habito_y_fecha"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/dia_semana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vie"
        android:gravity="center"
        android:textSize="@dimen/t_dia_semana_fecha"
        android:padding="@dimen/m_entre_unidad_y_valor"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/tittle_color"
        android:fontFamily="@font/encabezados"
        />

    <TextView
        android:id="@+id/dia_mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17"
        android:gravity="center"
        android:textSize="@dimen/t_dia_num_fecha"
        app:layout_constraintTop_toBottomOf="@id/dia_semana"
        android:textColor="@color/tittle_color"
        android:fontFamily="@font/encabezados"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
