<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/wh_item_habito_y_fecha"
    android:layout_height="@dimen/wh_item_habito_y_fecha"
    >

    <ImageView
        android:id="@+id/icono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerInside"

        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:tint="@color/habito_no_cumplido"
        />

    <ImageView
        android:id="@+id/icono_notas"
        android:layout_width="@dimen/wh_nota_habitos"
        android:layout_height="@dimen/wh_nota_habitos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/m_notas"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
