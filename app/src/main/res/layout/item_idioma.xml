<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/p_item_idioma"
    android:id="@+id/contenedor_idioma"
    >


    <TextView
        android:id="@+id/nombre_idioma"
        android:layout_width="@dimen/w_item_idioma"
        android:layout_height="wrap_content"
        android:textSize="@dimen/t_item_idioma"
        android:text="EspaÃ±ol"
        android:textColor="@color/tittle_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/m_start_nombre_item_idioma"
        />

    <TextView
        android:id="@+id/codigo_idioma"
        android:layout_width="@dimen/w_codigo_idioma"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/t_item_idioma"
        android:text="ES"
        android:textColor="@color/tittle_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nombre_idioma"
        android:layout_marginHorizontal="@dimen/m_h_codigo_idioma"
        />


    <ImageView
        android:id="@+id/imagen_idioma"
        android:layout_width="@dimen/w_bandera_idioma"
        android:layout_height="@dimen/h_bandera_idioma"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_espana"
        app:layout_constraintStart_toEndOf="@id/codigo_idioma"
        android:layout_marginStart="@dimen/m_start_bandera_idoma"
        />





</androidx.constraintlayout.widget.ConstraintLayout>